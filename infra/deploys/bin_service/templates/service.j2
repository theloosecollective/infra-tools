[Unit]
Description={{ description }}
After=network.target

[Service]
{% if working_dir %}
WorkingDirectory={{ working_dir }}
{% endif %}
ExecStart=/opt/{{ service_name }} {{ args }}
ExecStop=/bin/kill -s QUIT $MAINPID
EnvironmentFile=/etc/{{ service_name }}.env
Restart=always

[Install]
WantedBy=default.target
